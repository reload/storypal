# Ignore directories generated by Composer
/drush/contrib/
/vendor/

# Ignore everything in the web folder, with custom exceptions.
/web/*

!/web/themes
/web/themes/*
!/web/themes/custom

!/web/modules
/web/modules/*
!/web/modules/custom

!/web/sites/
/web/sites/*
!/web/sites/default
!/web/sites/default/files/
/web/sites/default/files/*
!/web/sites/default/files/translations
!/web/sites/default/files/translations/.gitkeep

# Ignore local Drupal settings.
/web/sites/*/settings.local.php
/web/sites/*/services.local.yml

# Ignore .env files as they are personal
/.env

# Ignore docker compose override.
/docker-compose.override.yml

/.last-pull-*

# Ignore directory for Node Package Manager (npm).
node_modules/

# Ignore deployed builds.
docker/db/*

# Ignore built storybook.
storybook-static/
build-storybook.log

